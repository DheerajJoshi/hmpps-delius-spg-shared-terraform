[
    {
        "cpu": ${cpu_units},
        "essential": true,
        "image": "${image_url}:${version}",
        "memory": ${memory},
        "name": "${container_name}",
        "mountPoints": [
            {
                "sourceVolume": "${data_volume_name}",
                "containerPath": "${data_volume_host_path}",
                "readOnly": false
            }
        ],
        "environment": [
            {
                "name": "SPG_BUILD_S3_REPO",
                "value": "${s3_bucket_config}"
            },

            {
            "name": "SPG_BUILD_INV_DIR",
            "value": "${spg_build_inv_dir}"
            },
            {
                "name": "KIBANA_HOST",
                "value": "${kibana_host}NOTUSEDYET"
            }
            ,
            {
            "name": "SPG_ENVIRONMENT_CODE",    //not sure that this is needed
            "value": "${SPG_ENVIRONMENT_CODE}"
            }            ,
            {
            "name": "SPG_ENVIRONMENT_CN",
            "value": "${SPG_ENVIRONMENT_CN}"
            }
            ,
            {
            "name": "SPG_JAVA_MAX_MEM",
            "value": "${SPG_JAVA_MAX_MEM}"
            }
            ,
            {
            "name": "SPG_DELIUS_MQ_URL",
            "value": "${SPG_DELIUS_MQ_URL}"
            }
            ,
            {
            "name": "SPG_DELIUS_MQ_USERNAME",  //NOTE THIS WILL BE OVERRIDEN IN CONTAINER START UP, PULLING VALUES FROM SSM  (waiting on values to be in SSM, so using default of no creds)
            "value": ""
            }
            ,
            {
            "name": "SPG_DELIUS_MQ_PASSWORD",  //NOTE THIS WILL BE OVERRIDEN IN CONTAINER START UP, PULLING VALUES FROM SSM (waiting on values to be in SSM, so using default of no creds)
            "value": ""
            }
            ,
            {
            "name": "SPG_GATEWAY_MQ_URL",
            "value": "${SPG_GATEWAY_MQ_URL}"
            }


            ],
        "portMappings": [
            {
                "hostPort": 8181,
                "protocol": "tcp",
                "containerPort": 8181
            },
            {
            "hostPort": 61616,
            "protocol": "tcp",
            "containerPort": 61616
            },
            {
            "hostPort": 2222,
            "protocol": "tcp",
            "containerPort": 22
            },
            {
            "hostPort": 9001,
            "protocol": "tcp",
            "containerPort": 9001
            },
            {
            "hostPort": 8989,
            "protocol": "tcp",
            "containerPort": 8989
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "${log_group_name}",
                "awslogs-region": "${log_group_region}",
                "awslogs-stream-prefix": "ecs-${container_name}"
            }
        }
    }
]