[
    {
        "requires_compatibilities": "EC2",
        "memory": ${ecs_memory},
        "essential": true,
        "image": "${image_url}:${version}",
        "name": "${container_name}",
        "mountPoints": [
            {
                "sourceVolume": "${data_volume_name}",
                "containerPath": "${data_volume_host_path}",
                "readOnly": false
            },
            {
                "sourceVolume": "log",
                "containerPath": "/opt/spg/servicemix/data/log",
                "readOnly": false
            }


        ],
        "portMappings": [
            {
                "hostPort": 8181,
                "protocol": "tcp",
                "containerPort": 8181
            },
            {
            "hostPort": 61616,
            "protocol": "tcp",
            "containerPort": 61616
            },
            {
            "hostPort": 2222,
            "protocol": "tcp",
            "containerPort": 22
            },
            {
            "hostPort": 9001,
            "protocol": "tcp",
            "containerPort": 9001
            },
            {
            "hostPort": 8989,
            "protocol": "tcp",
            "containerPort": 8989
            }
        ]
    }
]